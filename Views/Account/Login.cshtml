@{
    Layout = null;
}

@model LoginModel

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>BookStore Login</title>
        <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    </head>



    <body>
        <div class="bg-dark text-white p-2">
            <span class="navbar-brand m-1-2">Book Store Project</span>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>

        @******************************************************************************************************************
        Mission 11 bootstrap change with making the log in form look better. I added place holders and adjusted the positioning of the form.*@
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">

                <form method="post" asp-controller="Account" asp-action="Login">

                    <div class="form-floating mb-3">
                        <input class="form-control" placeholder="Enter User Name..." asp-for="UserName">
                        <label asp-for="UserName">Enter first name:</label>
                    </div>


                    <div class="form-floating mb-3">
                        <input class="form-control" placeholder="Enter Password..." asp-for="Password" type="password">
                        <label asp-for="Password">Enter Password:</label>

                    </div>

                    <button class="btn btn-primary" type="submit">Log In</button>

                    <input type="hidden" asp-for="ReturnUrl" />
                </form>

            </div>
        </div>
    </body>


